{
  "$schema": "https://raw.githubusercontent.com/opencode-ai/opencode/main/opencode-schema.json",
  "data": {
    "directory": ".opencode"
  },
  "tui": {
    "theme": "opencode"
  },
  "providers": {
    "local": {
      "apiKey": "ollama",
      "disabled": false
    }
  },
  "agents": {
    "coder": {
      "model": "local.gpt-oss-120b",
      "maxTokens": 8192
    },
    "task": {
      "model": "local.gpt-oss-120b",
      "maxTokens": 4096
    },
    "title": {
      "model": "local.gpt-oss-120b",
      "maxTokens": 80
    }
  },
  "lsp": {
    "python": {
      "command": "pyright-langserver",
      "args": ["--stdio"],
      "disabled": false
    },
    "typescript": {
      "command": "typescript-language-server",
      "args": ["--stdio"],
      "disabled": false
    }
  },
  "contextPaths": [
    "OPENCODE.md",
    "OPENCODE.local.md",
    "opencode.md",
    "opencode.local.md",
    ".github/copilot-instructions.md",
    ".cursorrules",
    "CLAUDE.md"
  ]
}
